<!-- Validation failure messages -->
<% if @fiduciary.errors.any? %>
  <% @fiduciary.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Fiduciary #<%= @fiduciary.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_fiduciary/<%= @fiduciary.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for fiduciary_name -->
      <div class="form-group">
        <label for="fiduciary_name" class="control-label">
          Fiduciary name
        </label>

        <input type="text" id="fiduciary_name" name="fiduciary_name" placeholder="Fiduciary name" class="form-control" value="<%= @fiduciary.fiduciary_name %>">
      </div>

      <!-- Label and input for fiduciary_address -->
      <div class="form-group">
        <label for="fiduciary_address" class="control-label">
          Fiduciary address
        </label>

        <input type="text" id="fiduciary_address" name="fiduciary_address" placeholder="Fiduciary address" class="form-control" value="<%= @fiduciary.fiduciary_address %>">
      </div>

      <!-- Label and input for matter_id -->
      <div class="form-group">
        <label for="matter_id" class="control-label">
          Matter
        </label>

        <input type="text" id="matter_id" name="matter_id" placeholder="Matter" class="form-control" value="<%= @fiduciary.matter_id %>">
      </div>

      <button class="btn btn-warning">
        Update Fiduciary
      </button>
      or
      <a href="/fiduciaries/<%= @fiduciary.id %>">Cancel</a>
    </form>
  </div>
</div>
