<div class="page-header">
  <h3>Asset Doc #<%= @asset_doc.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Asset</dt>
      <dd><iframe src="<%= @asset_doc.document %>" width="600" height="780"></iframe></dd>

      <dt>Date</dt>
      <dd><%= @asset_doc.date %></dd>

      <dt>Doc type</dt>
      <dd><%= @asset_doc.doc_type %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/asset_docs" class="btn btn-primary">
        Back
      </a>
      <a href="/asset_docs/<%= @asset_doc.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_asset_doc/<%= @asset_doc.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
