<div class="page-header">
  <h3>Asset #<%= @asset.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Asset type</dt>
      <dd><%= @asset.asset_type %></dd>

      <dt>Asset value</dt>
      <dd><%= @asset.asset_value %></dd>

      <dt>Matter</dt>
      <dd><%= @asset.matter_id %></dd>

      <dt>Total shares</dt>
      <dd><%= @asset.total_shares %></dd>

      <dt>Description</dt>
      <dd><%= @asset.description %></dd>

      <dt>Asset account</dt>
      <dd><%= @asset.asset_account %></dd>

      <dt>Market value</dt>
      <dd><%= @asset.market_value %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/assets" class="btn btn-primary">
        Back
      </a>
      <a href="/assets/<%= @asset.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_asset/<%= @asset.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
