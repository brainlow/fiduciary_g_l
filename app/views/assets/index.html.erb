<div class="page-header">
  <h1>
    Assets for The <%= @matter.matter_type %> of <%= @matter.name %>
    <a href="/assets/new/<%= @matter.id %>" class="btn btn-lg btn-success"> <i class="fa fa-plus" aria-hidden="true"></i> New Asset</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Asset type</th>
        <th>Asset value</th>
        <th>Total shares</th>
        <th>Description</th>
        <th>Asset account</th>
        <th>Market value</th>
        <th>Actions</th>
      </tr>

      <% @assets.each do |asset| %>
      <tr>
        <td><%= asset.asset_type %></td>
        <td><%= number_to_currency(asset.asset_value) %></td>
        <td><%= asset.total_shares %></td>
        <td><%= asset.description %></td>
        <td><%= asset.asset_account %></td>
        <td><%= number_to_currency(asset.market_value) %></td>
        <td>
          <a href="/assets/<%= asset.id %>/transactions" class="btn btn-sm btn-primary"> <i class="fa fa-money" aria-hidden="true"></i> Transactions</a>
          <a href="/assets/asset_docs/<%= asset.id %>" class="btn btn-sm btn-primary"> <i class="fa fa-file" aria-hidden="true"></i> Documents</a>
          <a href="/assets/<%= asset.id %>/edit" class="btn btn-sm btn-warning"> <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>
          <a href="/delete_asset/<%= asset.id %>" class="btn btn-sm btn-danger" rel="nofollow"> <i class="fa fa-minus-circle" aria-hidden="true"></i> Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
