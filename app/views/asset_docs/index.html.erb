<div class="page-header">
  <h1>
    Asset docs
    <a href="/asset_docs/new" class="btn btn-lg btn-success">New Asset doc</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Asset</th>
        <th>Date</th>
        <th>Doc type</th>
        <th>Actions</th>
      </tr>

      <% @asset_docs.each do |asset_doc| %>
      <tr>
        <td><%= asset_doc.asset_id %></td>
        <td><%= asset_doc.date %></td>
        <td><%= asset_doc.doc_type %></td>
        <td>
          <a href="/asset_docs/<%= asset_doc.id %>" class="btn btn-primary">Show</a>
          <a href="/asset_docs/<%= asset_doc.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_asset_doc/<%= asset_doc.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
