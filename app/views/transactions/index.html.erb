<div class="page-header">

  <ul class="breadcrumb">

    <li><a href="/matters/<%= @matter.id %>"><%= @matter.name %></a></li>
    <li><a href="/matter/assets/<%= @asset.matter_id %>">Assets</a></li>
    <li class="active">Transactions</li>
  </ul>

  <h1>
    <%= @asset.asset_account  %>, <%= @asset.description %>
    <a href="/transactions/new/<%= @asset.id %>" class="btn btn-lg btn-success"> <i class="fa fa-plus" aria-hidden="true"></i> New Transaction</a>
    <a href="/matter/assets/<%= @asset.matter_id %>" class="btn btn-lg btn-primary">Back</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover table-responsive">
      <tr align="center">
        <th>Date</th>
        <th>Transaction type</th>
        <th>Amount</th>
        <th>Description</th>
        <th>Account</th>
        <th>Payee</th>
        <th>Shares</th>
        <th>Actions</th>
      </tr>

      <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.date.to_formatted_s(:long) %></td>
        <td><%= transaction.transaction_type %></td>
        <td><%= number_to_currency(transaction.amount) %></td>
        <td><%= transaction.description.titleize %></td>
        <td ><%= transaction.account %></td>
        <td><%= transaction.payee %></td>
        <td><%= transaction.shares %></td>
        <td>
          <a href="/transactions/<%= transaction.id %>/edit" class="btn btn-sml btn-warning">Edit</a>
          <a href="/delete_transaction/<%= transaction.id %>" class="btn btn-sml btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
