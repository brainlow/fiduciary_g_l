<!-- Validation failure messages -->
<% if @asset.errors.any? %>
  <% @asset.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Asset #<%= @asset.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_asset/<%= @asset.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for asset_type -->
      <div class="form-group">
        <label for="asset_type" class="control-label">
          Asset type
        </label>

        <input type="text" id="asset_type" name="asset_type" placeholder="Asset type" class="form-control" value="<%= @asset.asset_type %>">
      </div>

      <!-- Label and input for asset_value -->
      <div class="form-group">
        <label for="asset_value" class="control-label">
          Asset value
        </label>

        <input type="text" id="asset_value" name="asset_value" placeholder="Asset value" class="form-control" value="<%= @asset.asset_value %>">
      </div>

      <!-- Label and input for matter_id -->
      <div class="form-group">

        <input type="hidden" id="matter_id" name="matter_id" placeholder="Matter" class="form-control" value="<%= @asset.matter_id %>">
      </div>

      <!-- Label and input for total_shares -->
      <div class="form-group">
        <label for="total_shares" class="control-label">
          Total shares
        </label>

        <input type="text" id="total_shares" name="total_shares" placeholder="Total shares" class="form-control" value="<%= @asset.total_shares %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @asset.description %>">
      </div>

      <!-- Label and input for asset_account -->
      <div class="form-group">
        <label for="asset_account" class="control-label">
          Asset account
        </label>

        <input type="text" id="asset_account" name="asset_account" placeholder="Asset account" class="form-control" value="<%= @asset.asset_account %>">
      </div>

      <!-- Label and input for market_value -->
      <div class="form-group">
        <label for="market_value" class="control-label">
          Market value
        </label>

        <input type="text" id="market_value" name="market_value" placeholder="Market value" class="form-control" value="<%= @asset.market_value %>">
      </div>

      <button class="btn btn-warning">
        Update Asset
      </button>
      or
      <a href="/assets/<%= @asset.id %>">Cancel</a>
    </form>
  </div>
</div>
