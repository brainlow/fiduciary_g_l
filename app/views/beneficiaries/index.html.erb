<div class="page-header">
  <h1>
    Beneficiaries
    <a href="/beneficiaries/new" class="btn btn-lg btn-success">New Beneficiary</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Beneficiary type</th>
        <th>Residual amount</th>
        <th>Specific amount</th>
        <th>Matter</th>
        <th>Actions</th>
      </tr>

      <% @beneficiaries.each do |beneficiary| %>
      <tr>
        <td><%= beneficiary.name %></td>
        <td><%= beneficiary.address %></td>
        <td><%= beneficiary.beneficiary_type %></td>
        <td><%= beneficiary.residual_amount %></td>
        <td><%= beneficiary.specific_amount %></td>
        <td><%= beneficiary.matter_id %></td>
        <td>
          <a href="/beneficiaries/<%= beneficiary.id %>" class="btn btn-primary">Show</a>
          <a href="/beneficiaries/<%= beneficiary.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_beneficiary/<%= beneficiary.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
