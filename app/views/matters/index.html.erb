<div class="page-header">
  <h1>
    Matters
    <a href="/matters/new" class="btn btn-lg btn-success"> <i class="fa fa-plus" aria-hidden="true"></i> New Matter</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Matter type</th>
        <th>Fiduciary number</th>
        <th>Actions</th>
      </tr>

      <% @matters.each do |matter| %>
      <tr>
        <td><%= matter.name %></td>
        <td><%= matter.matter_type %></td>
        <td><%= matter.fiduciary_number %></td>
        <td>
          <a href="/matters/<%= matter.id %>" class="btn btn-primary"> <i class="fa fa-search" aria-hidden="true"></i> Show</a>
          <a href="/matters/<%= matter.id %>/edit" class="btn btn-warning"> <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>
          <a href="/delete_matter/<%= matter.id %>" class="btn btn-danger" rel="nofollow"> <i class="fa fa-minus-circle" aria-hidden="true"></i> Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
