<div class="page-header">
  <h3>The Estate of <%= @matter.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @matter.name %></dd>

      <dt>Matter type</dt>
      <dd><%= @matter.matter_type %></dd>

      <dt>Fiduciary number</dt>
      <dd><%= @matter.fiduciary_number %></dd>

      <dt>Estate Value</dt>
      <dd><%= number_to_currency(@matter.assets.sum(:asset_value)) %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/matter/assets/<%= @matter.id %>" class="btn btn-danger" rel="nofollow">
      Assets
      </a>
      <a href="/matters" class="btn btn-primary">
        Back
      </a>
      <a href="/matters/<%= @matter.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_matter/<%= @matter.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
