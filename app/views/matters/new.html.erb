<!-- Validation failure messages -->
<% if @matter.errors.any? %>
  <% @matter.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Matter</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_matter" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @matter.name %>">
      </div>

      <!-- Label and input for matter_type -->
      <div class="form-group">
        <label for="matter_type" class="control-label">
          Matter type
        </label>

        <input type="text" id="matter_type" name="matter_type" placeholder="Matter type" class="form-control" value="<%= @matter.matter_type %>">
      </div>

      <!-- Label and input for fiduciary_number -->
      <div class="form-group">
        <label for="fiduciary_number" class="control-label">
          Fiduciary number
        </label>

        <input type="text" id="fiduciary_number" name="fiduciary_number" placeholder="Fiduciary number" class="form-control" value="<%= @matter.fiduciary_number %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">

        <input type="hidden" id="current_user.id" name="current_user.id" placeholder="current_user.id" class="form-control" value="<%= current_user.id %>">
      </div>

      <button class="btn btn-success">
        Create Matter
      </button>
      or
      <a href="/matters">Cancel</a>
    </form>
  </div>
</div>
