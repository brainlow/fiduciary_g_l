<div class="page-header">
  <h1>
    Transactions
    <a href="/transactions/new/<%= @asset.id %>" class="btn btn-lg btn-success">New Transaction</a>
    <a href="/matter/assets/<%= @asset.id %>" class="btn btn-lg btn-primary">Back</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date</th>
        <th>Transaction type</th>
        <th>Amount</th>
        <th>Description</th>
        <th>Account</th>
        <th>Payee</th>
        <th>Shares</th>
        <th>Asset</th>
        <th>Actions</th>
      </tr>

      <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.date %></td>
        <td><%= transaction.transaction_type %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.description %></td>
        <td><%= transaction.account %></td>
        <td><%= transaction.payee %></td>
        <td><%= transaction.shares %></td>
        <td><%= transaction.asset_id %></td>
        <td>
          <a href="/transactions/<%= transaction.id %>" class="btn btn-primary"><i class="fa fa-search" aria-hidden="true"></i> Show</a>
          <a href="/transactions/<%= transaction.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_transaction/<%= transaction.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
