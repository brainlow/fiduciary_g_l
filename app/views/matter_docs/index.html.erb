<div class="page-header">
  <h1>
    Matter docs
    <a href="/matter_docs/new" class="btn btn-lg btn-success">New Matter doc</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Document</th>
        <th>Document type</th>
        <th>Matter</th>
        <th>Actions</th>
      </tr>

      <% @matter_docs.each do |matter_doc| %>
      <tr>
        <td><%= matter_doc.document %></td>
        <td><%= matter_doc.document_type %></td>
        <td><%= matter_doc.matter_id %></td>
        <td>
          <a href="/matter_docs/<%= matter_doc.id %>" class="btn btn-primary">Show</a>
          <a href="/matter_docs/<%= matter_doc.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_matter_doc/<%= matter_doc.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
