<div class="page-header">
  <h1>
    Fiduciaries
    <a href="/fiduciaries/new/<%= @matter.id %>" class="btn btn-lg btn-success">New Fiduciary</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Fiduciary name</th>
        <th>Fiduciary address</th>
        <th>Actions</th>
      </tr>

      <% @fiduciaries.each do |fiduciary| %>
      <tr>
        <td><%= fiduciary.fiduciary_name %></td>
        <td><%= fiduciary.fiduciary_address %></td>
        <td>
          <a href="/matters/<%= fiduciary.matter_id %>" class="btn btn-primary">Back</a>
          <a href="/fiduciaries/<%= fiduciary.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_fiduciary/<%= fiduciary.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
